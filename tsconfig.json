{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": false,
    "outDir": "./dist",
    "rootDir": "./lib",
    "strict": true,
    "strictPropertyInitialization": false
  },
  "include": [
    "lib/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}